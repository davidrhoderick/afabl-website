<% provide(:title, "contact") %>
<div class="content">
  <div class="headline-container" id="contact-headline">
    <div class="headline">
      <h1 class="text-center">contact us</h1>
    </div>
  </div>

  <div class="row">
    <div class="small-10 small-offset-1 medium-8 medium-offset-2">
      <br>
      <h3 class="text-center">Send a message to us<br>
      <small>We'll get back to as fast as we can!</small></h3>

      <%= simple_form_for @contact, :html => {:class => 'form-horizontal' } do |f| %>
        <%= f.input :name, :required => true %>
        <%= f.input :email, :required => true %>
        <%= f.input :message, :as => :text, :required => true %>
        <div class="hide-for-small">
          <%= recaptcha_tags %>
        </div>
        <br>
        <%= f.button :submit, 'Send message' %>
      <% end %>
    </div>
</div>