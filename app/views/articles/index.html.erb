<div class="container">
  <h1>My blog</h1>
 
  <div class="row">
    <div class="col-xs-3">
      <h2>Title</h2>
    </div>
    <div class="col-xs-3">
      <h2>Text</h2>
    </div>
  </div>
   
  <% @articles.each do |article| %>
    <div class="row">
      <div class="col-xs-3">
        <span><%= article.title %></span>
      </div>
      <div class="col-xs-3">
        <p><%= article.text %></p>
      </div>
      <div class="col-xs-2">
        <%= link_to 'Show', article_path(article), class: 'btn btn-info' %>
      </div>
      <div class="col-xs-2">
        <%= link_to 'Edit', edit_article_path(article), class: 'btn btn-warning' %>
      </div>
      <div class="col-xs-2">
        <%= link_to 'Destroy', article_path(article),
              method: :delete,
              data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
      </div>
    </div>
  <% end %>

  <%= link_to 'New article', new_article_path, class: 'btn btn-success' %>
</div>