<% provide(:title, "articles") %>
<div class="row content">
  <div class="large-12 columns">
    <h1>My blog</h1>

    <table>
      <thead>
        <tr>
          <th>
            <strong>Title</strong>
          </th>
          <th>
            <strong>Text</strong>
          </th>
          <th colspan="3">
            <strong>Options</strong>
          </th>
        </tr>
      </thead>
      <tbody>
      <% @articles.each do |article| %>
        <tr>
          <td>
            <strong><%= article.title %></strong>
          </td>
          <td>
            <%= article.text.html_safe %>
          </td>
          <td>
            <%= link_to 'Show', article_path(article), class: 'button info small' %>
          </td>
          <td>
            <%= link_to 'Edit', edit_article_path(article), class: 'button success small' %>
          </td>
          <td>
            <%= link_to 'Destroy', article_path(article),
                  method: :delete,
                  data: { confirm: 'Are you sure?' }, class: 'button alert small' %>
          </td>
        </tr>
      <% end %>
    </table>

    <%= link_to 'New article', new_article_path, class: 'button' %>
  </div>
</div>